<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/camera_card_height"
    android:layout_marginEnd="@dimen/camera_card_margin"
    android:layout_marginStart="@dimen/camera_card_margin"
    android:layout_marginTop="@dimen/camera_card_margin"
    app:cardBackgroundColor="@color/colorCards"
    app:cardCornerRadius="@dimen/camera_card_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/camera_card_padding"
        android:paddingStart="@dimen/camera_card_padding">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_linked_camera_black_24dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingEnd="@dimen/camera_card_padding"
            android:paddingStart="@dimen/camera_card_padding">

            <TextView
                android:id="@+id/camera_card_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorDarkPrimary"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/camera_card_ip_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorDarkSecondary"
                android:textSize="17sp" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>