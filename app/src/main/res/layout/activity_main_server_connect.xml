<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600px"
    android:layout_height="wrap_content"
    android:stretchColumns="1"
    android:layout_gravity="center">

    <TableRow>

        <TextView
            android:text="서버 접속"
            android:layout_span="2"
            android:textSize="10pt"
            android:textColor="#ffff7825" />
    </TableRow>

    <TableRow>

        <TextView android:text="Host :" />

        <EditText
            android:id="@+id/server_ip_address"
            android:inputType="number"
            android:digits="1234567890."
            android:hint="164.125.68.74"
            android:text="164.125.68.74" />
    </TableRow>

    <TableRow>

        <TextView android:text="Port :" />

        <EditText
            android:id="@+id/server_port_num"
            android:inputType="number"
            android:hint="13000"
            android:text="13000" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/server_connect_btn"
            android:text="Connect"
            android:layout_column="0"
            android:layout_span="2" />
    </TableRow>
</TableLayout>
